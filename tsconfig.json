{
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "module": "amd",
        "target": "es2019",
        "types": [
            "node"
        ],
        "outDir": "dist/",
        "outFile": "dist/index.js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}